<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.012"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        app:cardBackgroundColor="@color/principal_yellow" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.50"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView_Nombre_ItemCSF"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="start"
                        android:text="@string/nombre_contrato_pendiente"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView_DescrServicio_ItemCSF"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="start"
                        android:text="@string/reparacion"
                        android:textColor="@color/gray2"
                        android:textSize="11sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/textView_Fecha_ItemCSF"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="start"
                        android:text="@string/date_contrato_pendiente"
                        android:textColor="@color/gray2"
                        android:textSize="11sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/textView_Costo_ItemCSF"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="start"
                        android:text="@string/precio_contrato_pendiente"
                        android:textColor="#43A047"
                        android:textSize="11sp"
                        android:textStyle="normal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:textAlignment="center">

                    <ImageButton
                        android:id="@+id/imageButton_Rechazar_ItemCSF"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="bottom"
                        android:layout_marginRight="10dp"
                        android:background="@color/white"
                        android:contentDescription="@string/todo"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/ic_baseline_cancel_24"
                        tools:ignore="DuplicateSpeakableTextCheck,ImageContrastCheck" />

                    <ImageButton
                        android:id="@+id/imageButton_Finalizar_ItemCSF"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="bottom"
                        android:layout_marginRight="10dp"
                        android:background="@color/white"
                        android:contentDescription="@string/todo"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/ic_twotone_done_outline_24"
                        tools:ignore="DuplicateSpeakableTextCheck,ImageContrastCheck" />

                    <ImageButton
                        android:id="@+id/imageButton_Mensaje_ItemCSF"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="bottom"
                        android:background="@drawable/roundcorner2"
                        android:contentDescription="@string/todo"
                        app:srcCompat="@drawable/ic_twotone_message_24"
                        tools:ignore="DuplicateSpeakableTextCheck,ImageContrastCheck"
                        app:tint="@color/principal_yellow" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>